{
  "name": "omni-gov-demo",
  "private": true,
  "version": "1.0.0",
  "description": "Multi-site EDS project with USWDS components",
  "scripts": {
    "lint:js": "eslint .",
    "lint:css": "stylelint \"blocks/**/*.css\" \"styles/*.css\"",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:fix": "npm run lint:js -- --fix && npm run lint:css -- --fix",
    "build:banner": "sass --load-path=node_modules/@uswds/uswds/packages --style=expanded blocks/banner/banner.scss:blocks/banner/banner.css",
    "watch:banner": "sass --load-path=node_modules/@uswds/uswds/packages --watch blocks/banner/banner.scss:blocks/banner/banner.css",
    "build:cards": "sass --load-path=node_modules/@uswds/uswds/packages --style=expanded blocks/cards/cards.scss:blocks/cards/cards.css",
    "watch:cards": "sass --load-path=node_modules/@uswds/uswds/packages --watch blocks/cards/cards.scss:blocks/cards/cards.css",
    "build:hero": "sass --load-path=node_modules/@uswds/uswds/packages --style=expanded blocks/hero/hero.scss:blocks/hero/hero.css",
    "watch:hero": "sass --load-path=node_modules/@uswds/uswds/packages --watch blocks/hero/hero.scss:blocks/hero/hero.css",
    "build:header": "sass --load-path=node_modules/@uswds/uswds/packages --style=expanded blocks/header/header.scss:blocks/header/header.css",
    "watch:header": "sass --load-path=node_modules/@uswds/uswds/packages --watch blocks/header/header.scss:blocks/header/header.css",
    "build:all": "npm run build:banner && npm run build:cards && npm run build:hero && npm run build:header"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/somenssarkar/omni-gov-demo.git"
  },
  "author": "OmniGov Team",
  "license": "Apache License 2.0",
  "bugs": {
    "url": "https://github.com/somenssarkar/omni-gov-demo/issues"
  },
  "homepage": "https://github.com/somenssarkar/omni-gov-demo#readme",
  "devDependencies": {
    "@babel/eslint-parser": "7.28.5",
    "@uswds/uswds": "^3.8.2",
    "eslint": "8.57.1",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-import": "2.32.0",
    "sass": "^1.80.7",
    "stylelint": "16.26.1",
    "stylelint-config-standard": "39.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
